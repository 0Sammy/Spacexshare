<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <%-include("partials/SEO")-%>
    <link rel="stylesheet" href="../CSS/toast.css" />
  </head>
<body>
    <%- include("partials/_alert")-%>
    <section id="main-section">
      <div class="h-screen bg-white lg:flex">
        <div class="flex h-full flex-col justify-center px-6 sm:px-8 md:px-10 lg:w-1/2 lg:px-12 xl:px-14 2xl:px-16">
          <a href="/"><img class="w-28 md:w-36" src="../Images/Logo.png" alt="Spacexshare-ai Logo"/></a>
          <h1 class="mt-10 text-xl font-semibold tracking-tighter sm:text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl">
            Login
          </h1>
          <p class="mt-4 text-xs font-semibold tracking-tighter sm:text-sm md:text-base xl:text-lg 2xl:text-xl">
            Welcome back
          </p>
          <form class="xl:[w-80%] mt-10 w-full sm:w-[90%] md:w-[70%] lg:w-[90%]" action="/user/login" method="post">
            <div class="flex flex-col gap-y-2">
              <label
                for="email"
                class="cursor-pointer text-xs sm:text-sm lg:text-base"
                >Email</label
              >
              <input
                required
                type="email"
                name="email"
                id="email"
                class="border border-[#E6E7E8] bg-inherit focus:bg-[#FFF] rounded-md py-2 px-4 text-sm outline-none placeholder:text-xs focus:outline-lightBlue sm:text-base sm:placeholder:text-sm md:py-3 lg:text-lg lg:placeholder:text-base"
                placeholder="example@gmail.com"
              />
            </div>
            <div class="mt-4 flex flex-col gap-y-2">
              <label
                for="myPassword"
                class="cursor-pointer text-xs sm:text-sm lg:text-base"
                >Password</label
              >
              <div class="relative">
                <input
                  required
                  type="password"
                  name="password"
                  id="myPassword"
                  class="border border-[#E6E7E8] bg-inherit focus:bg-[#FFF] w-full rounded-md py-2 px-4 text-sm outline-none placeholder:text-xs focus:outline-lightBlue sm:text-base sm:placeholder:text-sm md:py-3 lg:text-lg lg:placeholder:text-base"
                  placeholder="xxxxxxxxxxxxx"
                />
                <ion-icon name="eye" id="eye" class="text-lightBlack text-xl md:text-2xl absolute top-2 right-2 md:top-4 z-10 cursor-pointer" onclick="myFunction()"></ion-icon>
              </div>
            </div>
            <div class="flex gap-x-5 justify-between mt-8 text-xs sm:text-sm lg:text-base">
              <p> Don't Have An Account? <a href="/user/create" class="text-lightBlue duration-500 hover:underline"> Create Account</a></p>
              <a href="/user/forgot-password" class="text-lightBlue duration-500 hover:underline">Forgot Password?</a>
            </div>
            <button
              type="submit"
              class="group mt-8 flex w-full items-center justify-center gap-x-1.5 rounded-md bg-lightBlue py-2 text-sm text-white sm:text-base md:py-3 lg:text-lg"
            >
              Continue
              <img
                src="../Images/rightArrow.svg"
                alt="Right Arrow"
                class="transition duration-500 group-hover:translate-x-2"
              />
            </button>
          </form>
        </div>
        <div class="hidden bg-lightBlue pt-10 lg:block lg:w-1/2">
          <img
            src="../Images/create.svg"
            alt="Login Image"
            class="h-full w-full"
          />
        </div>
      </div>
    </section>
    <script src="../JS/form.js"></script>
    <%-include("partials/script")-%>
  </body>
</html>

