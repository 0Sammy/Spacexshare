          <button id="seeCertificate" class="duration-500 hover:text-black hover:bg-white hover:border-2 hover:border-darkBlue dark:hover:border-lightBlue dark:hover:bg-white px-10 py-5 bg-darkBlue dark:bg-lightBlue text-white dark:text-black mt-10">See Certificate</button>
          <div id="imgDiv" class="hidden mt-10">
            <img class="h-[32rem] border border-black" src="/Images/certificate-of-incorporation.jpg" alt="Certificate Of Incorporation">
          </div>
        </div>
      </div>
    </section>
    <%- include("partials/cta"); -%>
    <!-- Footer -->
    <%- include("partials/footer"); -%>
    <%-include("partials/script.ejs"); -%>
    <script>
      seeCert = document.getElementById('seeCertificate');
      imgDiv = document.getElementById('imgDiv')
      seeCert.addEventListener("click", () => imgDiv.classList.toggle("hidden"))
