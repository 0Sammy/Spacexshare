  <body class="bg-white dark:bg-lightBlack">
<%- include("partials/nav"); -%>
<section id="Compose Form">
  <div class="mt-20 p-4 md:p-20">
    <h1 class="text-black dark:text-white text-3xl md:text-5xl my-4">Compose</h1>
    <form class="" action="/compose" method="post">
      <div class="flex flex-col text-grey">
        <label class="mt-4">Title</label>
        <input class="px-10 py-2 bg-gray-200 dark:bg-gray-400" type="text" name="postTitle">
        <label class="mt-10">Post</label>
        <textarea class="px-10 py-4 bg-gray-200 dark:bg-gray-400" name="postBody" rows="5" cols="30"></textarea>
      </div>
      <button class="mt-10 flex flex-row items-center px-4 py-3 font-bold text-black dark:text-white border-2 border-darkBlue dark:border-lightBlue hover:bg-darkBlue hover:dark:bg-lightBlue duration-500 hover:text-white hover:dark:text-black" type="submit" name="button">Publish <ion-icon
        class="text-3xl ml-1"
        name="navigate-circle-outline"
      ></ion-icon
    ></button>
    </form>
  </div>
</section>
